---
import { getEntry, render } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';

const about = await getEntry('pages', 'about');
const { Content } = await render(about);
---

<BaseLayout title={about.data.title} description={about.data.description}>
  <article>
    <h2 class="text-xs font-bold text-gray-400 uppercase tracking-wide mb-4">
      {about.data.title}
    </h2>
    <div class="prose-custom">
      <Content />
    </div>
  </article>
</BaseLayout>

<style>
  .prose-custom {
    line-height: 1.7;
    color: #3b3b3b;
  }

  .prose-custom :global(p) {
    margin-bottom: 1rem;
  }

  .prose-custom :global(a) {
    color: #ae995a;
  }

  .prose-custom :global(a:hover) {
    color: #8b7a48;
  }

  .prose-custom :global(strong) {
    font-weight: 600;
  }

  .prose-custom :global(h2) {
    font-size: 1.25rem;
    font-weight: 600;
    color: #3b3b3b;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }

  .prose-custom :global(h3) {
    font-size: 1rem;
    font-weight: 600;
    color: #494949;
    margin-top: 1.5rem;
    margin-bottom: 0.5rem;
  }

  .prose-custom :global(ul) {
    list-style: disc;
    padding-left: 1.5rem;
    margin-bottom: 1rem;
  }

  .prose-custom :global(li) {
    margin-bottom: 0.5rem;
  }

  .prose-custom :global(img) {
    width: 100%;
    height: auto;
    margin-bottom: 1.5rem;
  }
</style>
