---
import { getEntry, render } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';

const about = await getEntry('pages', 'about');
const { Content } = await render(about);
---

<BaseLayout title={about.data.title} description={about.data.description}>
  <article>
    <h2 class="section-heading">{about.data.title}</h2>
    <div class="prose">
      <Content />
    </div>
  </article>
</BaseLayout>

<style>
  .section-heading {
    font-size: 0.75rem;
    font-weight: 700;
    color: var(--gray-400);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 1rem;
  }

  .prose {
    line-height: 1.7;
    color: var(--gray-800);
  }

  .prose :global(p) {
    margin-bottom: 1rem;
  }

  .prose :global(a) {
    color: var(--primary-500);
  }

  .prose :global(a:hover) {
    color: var(--primary-600);
  }

  .prose :global(strong) {
    font-weight: 600;
  }

  .prose :global(h2) {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--gray-800);
    margin-top: 2rem;
    margin-bottom: 1rem;
  }

  .prose :global(h3) {
    font-size: 1rem;
    font-weight: 600;
    color: var(--gray-700);
    margin-top: 1.5rem;
    margin-bottom: 0.5rem;
  }

  .prose :global(ul) {
    list-style: disc;
    padding-left: 1.5rem;
    margin-bottom: 1rem;
  }

  .prose :global(li) {
    margin-bottom: 0.5rem;
  }

  .prose :global(img) {
    width: 100%;
    height: auto;
    margin-bottom: 1.5rem;
  }
</style>
