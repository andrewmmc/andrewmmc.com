---
import { SITE_TITLE, SITE_DESCRIPTION, SOCIAL_LINKS } from '../consts';
---

<header class="max-w-container mx-auto px-6 pt-14 pb-10 sm:pt-16 sm:pb-12">
  <div class="flex items-center gap-4 mb-7">
    <a
      href="/"
      class="flex-shrink-0 rounded-full focus-visible:outline-none"
      style="outline-offset: 3px;"
      aria-label={`${SITE_TITLE} â€“ home`}
    >
      <img src="/avatar.jpg" alt="" width="52" height="52" class="rounded-full block" />
    </a>
    <div>
      <h1 class="font-heading text-[1.4rem] leading-tight text-stone-900 mb-0.5">
        <a
          href="/"
          class="text-stone-900 hover:text-stone-700 transition-colors duration-150 focus-visible:outline-none"
        >
          {SITE_TITLE}
        </a>
      </h1>
      <p class="text-stone-500 text-sm leading-snug">{SITE_DESCRIPTION}</p>
    </div>
  </div>
  <nav class="flex items-center gap-6" aria-label="Main navigation">
    <a
      href="/"
      class="text-sm text-stone-600 hover:text-stone-900 transition-colors duration-150 focus-visible:outline-none focus-visible:underline"
    >
      Writing
    </a>
    <a
      href="/about"
      class="text-sm text-stone-600 hover:text-stone-900 transition-colors duration-150 focus-visible:outline-none focus-visible:underline"
    >
      About
    </a>
    <a
      href={`https://github.com/${SOCIAL_LINKS.github}`}
      target="_blank"
      rel="noopener noreferrer"
      class="text-sm text-stone-600 hover:text-stone-900 transition-colors duration-150 focus-visible:outline-none focus-visible:underline inline-flex items-center gap-1"
    >
      GitHub
      <svg
        viewBox="0 0 12 12"
        width="10"
        height="10"
        fill="none"
        stroke="currentColor"
        stroke-width="1.5"
        stroke-linecap="round"
        stroke-linejoin="round"
        aria-hidden="true"
        class="opacity-60"
      >
        <path d="M2 10L10 2M5 2h5v5"></path>
      </svg>
    </a>
  </nav>
</header>
